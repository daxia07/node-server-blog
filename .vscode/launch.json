  "version": "0.2.0",
  "configurations": [
    
  {
    "type": "node",
    "request": "launch",
    "name": "Launch Program",
    "program": "${file}",
    "envFile": "${workspaceFolder}/.env",    
    "env": {"NODE_ENV":"DEBUG"},
  },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch via NPM",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run-script",
        "debug"
      ],
      "port": 9229
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program index",
      "program": "${workspaceFolder}/src/index.js"
    }
  ]
}